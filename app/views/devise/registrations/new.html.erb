<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h3 class="form-header">Sign Up!</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>

        <%= f.input :email, error: 'Valid email required' %>
        <%= f.input :password, error: 'Password is Invalid' %>
        <%= f.input :password_confirmation, error: 'Passwords don\'t match' %>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary black-background white" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
