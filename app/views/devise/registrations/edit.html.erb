<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">

      <h3 class="form-header">Edit Profile</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>

        <%= f.input :email %>

        <%= f.input :password %>

        <%= f.input :password_confirmation %>


        <div class="field">
          <%= f.input :current_password, label: "Current Password (required)" %><br />
        </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row account-cancel-margin">
  <div class="col-md-4 col-md-offset-4 account-cancel-margin">
    <div class="well account-cancel-margin">
      <h2>Cancel my account</h2>
      <br>
      <p class="red">WARNING: This will delete all sites associated with your account. Are you ready to say goodbye to everything you've ever done on Picturesque?</p>
      <br>
      <%= link_to "JK get me out of here!!", root_path, class: "btn btn-default" %>
      <p></p>
      <%= button_to "~~~Delete Account~~~", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
